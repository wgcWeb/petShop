/* pages/home/home.wxss */
.swiper-box{
  /* 1rpx等于0.5px */
  padding: 30rpx;
}
.swiper-box swiper {
  height: 320rpx;
}
.swiper-box swiper image {
  width: 100%;
  height: 100%;
}
.nav-box .nav {
  width: 180%;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
}
.nav-box .nav .item {
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 2px solid #eee;
  border-radius: 20rpx;
  text-align: center;
  font-size: 32rpx;
}

/* .nav-box .nav .item.active{
  color: #ff4d00;
} */
.goods-list .item{
  display: flex;
  padding: 30rpx;
  border-bottom: 2px solid #eee;
}
.goods-list .item .pic{
  width: 200rpx;
  height: 200rpx;
}
.goods-list .item .pic image{
  width: 200rpx;
  height: 200rpx;
}
.goods-list .item .content{
  margin-left: 20rpx;
}
.goods-list .item .content .title{
  font-size: 32rpx;
  /* 省略标题 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods-list .item .content .desc{
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.goods-list .item .content .price{
  /* color: #ff4d00; */
  margin-top: 10rpx;
}
.goods-list .no-more{
  text-align: center;
  padding: 30rpx;
}