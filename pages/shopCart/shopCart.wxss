/* pages/shopCart/shopCart.wxss */
page{
  height: 100%;
  background-color: #f5f5f5;
}
.top-box{
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #eee;
  padding: 0 30rpx;
}
.top-box .left{
  flex: 1;
}

.item-list{
  padding-bottom: 110rpx;
}
.item-list .item{
  padding: 20rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.item-list .item .pic image{
  width: 160rpx;
  height: 160rpx;
}
.item-list .item .content{
  margin-left: 20rpx;
  flex: 1;
}
.item-list .item .content .title{
  font-size: 32rpx;
}
.item-list .item .content .desc{
  font-size: 28rpx;
  color: #999;
}
.item-list .item .content .price-info{
  display: flex;
}
.item-list .item .content .price-info .price {
  width: 65%;
  font-size: 36rpx;
}
.item-list .item .content .price-info .oper{
  display: flex;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
}
.item-list .item .content .price-info .oper .add{
  width: 50rpx;
  text-align: center;
}
.item-list .item .content .price-info .oper input{
  width: 80rpx;
  text-align: center;
  font-size: 26rpx;
  border-left: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
}
.item-list .item .content .price-info .oper .reduce{
  width: 50rpx;
  text-align: center;
}
.total-box{
  z-index: 99;
  display: flex;
  align-items: center;
  width: 100%;
  height: 110rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.total-box .all{
  font-size: 26rpx;
  width: 370rpx;
  margin-top: 10rpx;
}
.total-box .total-price{
  font-size: 24rpx;
  flex: 1;
}
.total-box .total-price .price{
  font-size: 36rpx;
}
.total-box .btn{
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  text-align: center;
  border-radius: 10rpx;
}
.total-box .btn-default{
  background-color: #eee;
  color: #666;
}
.total-box .btn-primary{
  background-color: #ff4d00;
  color: #fff;
}