/* pages/detail.wxss */
.swiper-box{
  position: relative;
}
.swiper-box swiper{
  height: 750rpx;
}
.swiper-box swiper image{
  width: 100%;
  height: 100%;
}
.swiper-box .tips{
  position: absolute;
  right: 40rpx;
  bottom: 40rpx;
  background-color: #333;
  opacity: 0.6;
  padding: 0 20rpx;
  border-radius: 20rpx;
  color: #fff;
}
.goods-info{
  padding: 30rpx;
}
.goods-info .price{
  font-size: 32rpx;
}
.goods-info .share-box{
  display: flex;
}
.goods-info .share-box .title{
  margin-top: 20rpx;
}
.goods-info .share-box .shareBtn{
  position: relative;
  width: 80rpx;
  height: 80rpx;
  background: #fff;
}
.goods-info .share-box .shareBtn::after{
  border: none;
}
.goods-info .share-box .shareBtn .iconfont{
  position: absolute;
  top: -20rpx;
  left: 20rpx;
  font-size: 50rpx;
}
.address{
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #f5f5f5;
  font-size: 32rpx;
  padding: 0 20rpx;
  margin-top: 24rpx;
}

.detail-box{
  padding: 20rpx 20rpx 100rpx;
}
.detail-box image{
  width: 100%;
  display: block;
}

.bottom-nav{
  width: 100%;
  height: 100rpx;
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
}
.bottom-nav .small{
  flex: 0.5;
  padding-top: 5rpx;
  text-align: center;
  font-size: 28rpx;
}
.bottom-nav .add-cart{
  flex: 1;
  text-align: center;
  line-height: 100rpx;
  font-size: 32rpx;
  background-color: #FFA900;
  color: #fff;
}
.bottom-nav .btn-buy{
  flex: 1;
  text-align: center;
  line-height: 100rpx;
  font-size: 32rpx;
  background-color: #FE7302;
  color: #fff;
}